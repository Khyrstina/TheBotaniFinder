@model IEnumerable<BotaniFinder.Models.Url>

@{
    ViewData["Title"] = "PreviousIdentificationsView";
}
<Center>
<h1>Plants Recently Identified Using BotaniFinder</h1>
</Center> 

<ul class="image-list">
    @foreach (var item in Model)
    {
        @if (item.UrlId != 1)
        {
            <li>
                <img src="@item.O" alt="Image of identified plant">
            </li>
        }

    }
</ul>

<style>
    body {
        background-image: url("https://png.pngtree.com/thumb_back/fw800/background/20190221/ourmid/pngtree-lavender-simple-rose-texture-image_28475.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }

    h1, h2, h3 {
        font-family: Verdana;
        font-variant: normal;
    }


    .indent {
        margin-left: 30px;
    }
    .image-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 0 auto;
        max-width: 80%;
        padding: 0;
        list-style: none;
    }

        .image-list li {
            margin: 10px;
        }

        .image-list img {
            display: block;
            max-width: 100%;
            height: auto;
        }
</style>

